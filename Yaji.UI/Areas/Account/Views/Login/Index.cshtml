@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
   <div class="content">
      <div class="container">
        <div class="page-header">
          <h1>Yaji Registration</h1>
            <h4>Why Registering with Yaji?</h4> <br />
        </div>
          

            <div class="row-fluid">
            <ul class="thumbnails">
                <li class="span4">

                               <div class="widget-body">
              <div class="center-align">
                <form class="form-horizontal form-signin-signup" id="frmRegistration">
                  <input type="text" name="email" placeholder="Email"> <br />
                  <input type="password" name="password" placeholder="Password"> <br />
                  <input type="password" name="password_confirmation" placeholder="Password Confirmation"><br />
                    <input type="text" name="City" placeholder="City"><br />
                    <input type="text" name="State" placeholder="State"><br />
                    <input type="text" name="Country" placeholder="Country"><br />
                    <textarea name="Address" placeholder="Address"></textarea><br />
                  <div>
                    <input type="submit" value="Signup" class="btn btn-primary btn-large">
                  </div>
                </form>
                
              </div>
            </div>
                </li>
                <li class="span4">
                    <div class="widget-body">
                        <div class="center-align">
                      <form id="frmSignin">
                    <h2>Already have Yaji account?</h2>
                        <input type="text" name="email" placeholder="Email"> <br />
                  <input type="password" name="password" placeholder="Password"> <br />
                <a href="#" onclick="javascript:signin('frmSignin')" class="btn btn-large bottom-space">Signin</a>
               </form>
                <ul class="signin-with-list">
                  <li>
                    <a class="btn-twitter">
                      <i class="icon-twitter icon-large"></i>
                      Signin with Twitter
                    </a>
                  </li>
                  <li><br />
                    <a class="btn-facebook">
                      <i class="icon-facebook icon-large"></i>
                      Signin with Facebook
                    </a>
                  </li>
                </ul>
                    </div>
                        </div>
                    <br />
                </li>
                </ul>

        
      </div>
    </div>
       </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script type="text/javascript" src="~/Content/js/account.js"></script>